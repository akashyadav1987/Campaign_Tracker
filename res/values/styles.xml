<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
	-->
	  <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
		-->
	</style>

	<!-- Application theme. -->
	<style name="AppTheme" parent="AppBaseTheme">
		<!-- All customizations that are NOT specific to a particular API-level can go here. -->
	</style>

	<style name="CodeFont" parent="@android:style/TextAppearance.Medium">
		<item name="android:textColor">#221e1e</item>
		<item name="android:textSize">12dp</item>
	</style>

	<style name="WarningCustomTheme" parent="android:Theme.Light">
		<item name="android:textColor">@color/RedButtonColor</item>
	</style>
    <!-- Full Screen Progress Dialog -->
    <style name="transparent_dialog_no_titlebar" parent="@android:style/Theme.Translucent.NoTitleBar">

        <!-- item name ="android:windowBackground"></item> -->
        <item name="android:background">#33000000</item>
    </style>
	
</resources>