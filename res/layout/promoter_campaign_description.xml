<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/promoterCampaginDescription"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/CardsBackgroundColor"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/campaignLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@android:color/white"
            android:paddingBottom="20dp"
            android:paddingTop="15dp" >

            <View
                android:id="@+id/activeCircle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/circle_active" />

            <TextView
                android:id="@+id/campainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/activeCircle"
                android:text="Campaign"
                android:textSize="@dimen/heading_textsize" />

            <TextView
                android:id="@+id/campaignName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/campainText"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/activeCircle"
                android:text="Campaign Name"
                android:textColor="@color/GreyLineColor"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:id="@+id/rightArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:text="@string/right_arrow_icon"
                android:textColor="@color/GreyLineColor"
                android:textSize="@dimen/small_icon" />

            <TextView
                android:id="@+id/campaignDateStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/campaignName"
                android:layout_below="@+id/campaignName"
                android:layout_marginTop="5dp"
                android:text="24/9/14"
                android:textColor="@color/GreyLineColor"
                android:textSize="@dimen/normal_text_size" />

            <TextView
                android:id="@+id/dash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/campaignName"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/campaignDateStart"
                android:text="-"
                android:textColor="@color/GreyLineColor"
                android:textSize="@dimen/normal_text_size" />

            <TextView
                android:id="@+id/campaignDateEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/campaignName"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/dash"
                android:text="24/9/14"
                android:textColor="@color/GreyLineColor"
                android:textSize="@dimen/normal_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/storeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/campaignLayout"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"
            android:paddingBottom="20dp"
            android:paddingTop="15dp" >

            <View
                android:id="@+id/storeactiveCircle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/circle_active" />

            <TextView
                android:id="@+id/storeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/storeactiveCircle"
                android:text="Store"
                android:textSize="@dimen/heading_textsize" />

            <TextView
                android:id="@+id/storeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/storeText"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/storeactiveCircle"
                android:text="Store Name"
                android:textColor="@color/GreyLineColor"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:id="@+id/storerightArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:text="@string/right_arrow_icon"
                android:textColor="@color/GreyLineColor"
                android:textSize="@dimen/small_icon" />

            <TextView
                android:id="@+id/storeDateStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/storeName"
                android:layout_below="@+id/storeName"
                android:layout_marginTop="5dp"
                android:text="24/9/14"
                android:textColor="@color/GreyLineColor"
                android:textSize="@dimen/normal_text_size" />

            <TextView
                android:id="@+id/storeDash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/storeName"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/storeDateStart"
                android:text="-"
                android:textColor="@color/GreyLineColor"
                android:textSize="@dimen/normal_text_size" />

            <TextView
                android:id="@+id/storeDateEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/storeName"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/storeDash"
                android:text="24/9/14"
                android:textColor="@color/GreyLineColor"
                android:textSize="@dimen/normal_text_size" />
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>