<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_background_color" >

 
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/submitFormButton"
        android:background="@color/app_background_color" />

    <Button
        android:id="@+id/submitFormButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uploadFormIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/white_button_selector"
        android:gravity="center"
        android:text="@string/submit_button"
        android:textColor="@drawable/button_text_selector" />

    <TextView
        android:id="@+id/uploadFormIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/uploadForm"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/uploadForm"
        android:text="@string/upload_form_icon"
        android:textSize="@dimen/small_icon" />

    <TextView
        android:id="@+id/uploadForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Upload Form"
        android:textSize="@dimen/heading_textsize" />

</RelativeLayout>