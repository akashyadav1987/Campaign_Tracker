<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >

	<TextView
		android:id="@+id/supervisorDetailsHeading"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="@dimen/campaig_details_screen_margin"
		android:text="@string/supervisor_details"
		android:textColor="@android:color/black"
		android:textSize="@dimen/heading_textsize" />

	<TextView
		android:id="@+id/supervisorName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/supervisorDetailsHeading"
		android:layout_marginLeft="@dimen/campaig_details_screen_margin"
		android:layout_marginTop="10dp"
		android:text="Supervisor Name"
		android:textSize="@dimen/normal_text_size" />

	<TextView
		android:id="@+id/supervisorContactNumber"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/supervisorName"
		android:layout_marginLeft="@dimen/campaig_details_screen_margin"
		android:layout_marginTop="10dp"
		android:text="91 -98108883282"
		android:textSize="@dimen/normal_text_size" />

	<TextView
		android:id="@+id/supervisorCallIcon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@+id/supervisorContactNumber"
		android:layout_alignParentRight="true"
		android:layout_marginRight="70dp"
		android:text="Icon"
		android:textSize="@dimen/normal_text_size" />

</RelativeLayout>