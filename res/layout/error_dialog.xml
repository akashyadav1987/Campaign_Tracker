<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="256dp"
	android:layout_height="wrap_content"
	android:layout_gravity="center"
	android:background="@drawable/single_line_border"
	android:id="@+id/error_layout" >

	<View
		android:id="@+id/titleBar"
		android:layout_width="wrap_content"
		android:layout_height="50dp"
		android:background="@color/RedButtonColor"
		android:padding="2dp" />

	<TextView
		android:id="@+id/wrongCredentials"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="10dp"
		android:text="Wrong Credentials"
		android:textColor="@android:color/white"
		android:textSize="@dimen/heading_textsize" />

	<View
		android:id="@+id/line"
		android:layout_width="wrap_content"
		android:layout_height="1dp"
		android:layout_below="@id/wrongCredentials"
		android:layout_marginLeft="2dp"
		android:layout_marginRight="2dp"
		android:layout_marginTop="10dp"
		android:background="@color/RedButtonColor"
		android:padding="2dp" />

	<TextView
		android:id="@+id/contactAdmin"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/line"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="10dp"
		android:text="@string/contact_admin"
		android:textSize="18dp" />

	<TextView
		android:id="@+id/errorText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/contactAdmin"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="5dp"
		android:paddingLeft="6dp"
		android:text="@string/lorrem_ipsum"
		android:textAlignment="center"
		android:textSize="@dimen/small_text_size" />

	<Button
		android:id="@+id/cancel"
		android:layout_width="120dp"
		android:layout_height="wrap_content"
		android:layout_below="@id/errorText"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="40dp"
		android:background="@color/RedButtonColor"
		android:text="Cancel"
		android:textColor="@android:color/white"
		android:textSize="@dimen/heading_textsize" />

	<View
		android:id="@+id/emptyspace"
		android:layout_width="match_parent"
		android:layout_height="15dp"
		android:layout_below="@id/cancel" />

</RelativeLayout>